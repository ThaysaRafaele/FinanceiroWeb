@model FinanceiroWeb.Models.NotaFiscal

@{
    ViewData["Title"] = "Excluir Nota Fiscal";
}

<h1>Excluir Nota Fiscal</h1>

<h3>Tem certeza de que deseja excluir este item?</h3>

<div>
    <h4>Nota Fiscal</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Nome Pagador
            </dt>
            <dd class="col-sm-10">
                @Model.NomePagador
            </dd>
            <dt class="col-sm-2">
                Número Nota
            </dt>
            <dd class="col-sm-10">
                @Model.NumeroNota
            </dd>
            <dt class="col-sm-2">
                Data Emissão
            </dt>
            <dd class="col-sm-10">
                @Model.DataEmissao.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                Data Cobrança
            </dt>
            <dd class="col-sm-10">
                @Model.DataCobranca.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                Data Pagamento
            </dt>
            <dd class="col-sm-10">
                @Model.DataPagamento?.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                Valor
            </dt>
            <dd class="col-sm-10">
                @Model.Valor.ToString("C")
            </dd>
            <dt class="col-sm-2">
                Documento Nota
            </dt>
            <dd class="col-sm-10">
                @Model.DocumentoNota
            </dd>
            <dt class="col-sm-2">
                Documento Boleto
            </dt>
            <dd class="col-sm-10">
                @Model.DocumentoBoleto
            </dd>
            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @Model.Status
            </dd>
        </dl>
    </div>

    <form asp-action="ExcluirNF">
        <input type="hidden" asp-for="NotaId" />
        <div class="form-group">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
